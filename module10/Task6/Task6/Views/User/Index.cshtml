@using DAL.Models;
@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";
}

    <head>
        <link href="~/lib/bootstrap/dist/css/bootstrap-yeti.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    </head>

<h1>Users</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                <div>
                    Photo
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <img class="imgInitStyle" src="@item.PhotoPath" asp-append-version="true"/>
            </td>
            <td>
                <a asp-action="Awards" asp-route-id="@item.UserID">Awards</a> |
                <a asp-action="Edit" asp-route-id="@item.UserID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Download">Download</a>
</p>
