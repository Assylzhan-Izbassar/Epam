@model IEnumerable<DAL.Models.Award>

@{
    ViewData["Title"] = "Index";
}

<h1>Awards</h1>
<style>
    .imgInitStyle{
        width:auto;
        height:60px;
    }
</style>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                <div>
                    Image
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img class="imgInitStyle" src="@item.ImagePath" asp-append-version="true" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AwardID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AwardID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AwardID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
