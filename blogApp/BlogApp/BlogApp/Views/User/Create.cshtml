@using DAL.Entities;
@using PL.Models;

@model UserViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Blog/_Layout.cshtml";
}

<h1>Create</h1>

<form asp-action="Create" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Birthdate" class="control-label">Birthdate</label>
        <input type="text" asp-for="Birthdate" class="form-control" />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Password" class="control-label">Password</label>
        <input type="text" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="User">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

