@using DAL.Entities;
@model IEnumerable<User>;

@{
    ViewData["Title"] = "UserList";
}

<h1>Users</h1>

<table class="table">
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Roles" asp-route-userid="@item.Id">Access</a>
            </td>
        </tr>
    }
</table>

<div>
    <a asp-action="Index", asp-controller="Blog">Back to List</a>
</div>

