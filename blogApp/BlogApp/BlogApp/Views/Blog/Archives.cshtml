@using DAL.Entities;
@model List<Post>

@{
    ViewData["Title"] = "Archives";
}

<h1>Archives</h1>

<form>
    <div>
        @if (Model.Count == 0)
        {
            <h3>No posts yet.</h3>
        }
        else
        {
            @for (int i = 0; i < Model.Count; ++i)
            {
                <span>@(i+1)) </span><a asp-controller="Post" 
                                        asp-action="Details" 
                                        asp-route-id="@Model[i].PostId" 
                                        asp-route-searchOption="Category">@Model[i].Title</a> <br />
            }
        }
    </div>
</form>

