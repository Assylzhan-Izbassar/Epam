@using DAL.Entities;
@model List<Post>

<div class="sidebar">
    <h3>Latest Posts</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var post in Model)
            {
                <li>
                    <a href="#">@post.Title</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No posts found!</p>
    }
</div>