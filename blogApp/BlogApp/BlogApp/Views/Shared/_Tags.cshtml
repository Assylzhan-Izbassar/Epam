@using DAL.Entities;
@model List<Tag>

<div class="sidebar">
    <h3>Tags</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var tag in Model)
            {
                <li>
                    <a asp-controller="Blog", asp-action="Posts"
                       asp-route-searchString ="@tag.Name"
                       asp-route-searchOption="Tag">@tag.Name</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No tags found!</p>
    }
</div>