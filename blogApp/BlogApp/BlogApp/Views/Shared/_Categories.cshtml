@using DAL.Entities;
@model List<Category>

<div class="sidebar">
    <h3>Categories</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li>
                    <a asp-controller="Blog" asp-action="Posts" asp-route-searchString="@category.Name">@category.Name</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No categories found!</p>
    }
</div>