@using DAL.Entities;
@model IList<Category>

<div class="sidebar">
    <h3>Categories</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li>@Html.DisplayNameFor(model => category)</li>
            }
        </ul>
    }
    else
    {
        <p>No categories found!</p>
    }
</div>